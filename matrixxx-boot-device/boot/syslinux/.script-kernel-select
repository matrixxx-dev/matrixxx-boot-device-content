#!/bin/bash

## ########################################################################## ##
## Set kernel
##
## ########################################################################## ##

## -------------------------------------------------------------------------- ##
## FUNCTIONS:
## -------------------------------------------------------------------------- ##
## copy the linux kernels
func_copy_linux_kernels(){ # version="$1" amendment="$2"
  rm -f ../linux*
  cp -ax ./vmlinuz-"$1$2" ../linux 2>/dev/null
  cp -ax ./vmlinuz-"$1"-64"$2" ../linux64 2>/dev/null
  cp -ax ./linux-kernel*.txt ../ 2>/dev/null
}

## -------------------------------------------------------------------------- ##
## MAIN:
## -------------------------------------------------------------------------- ##
[ -z "$VERSION" ] && { echo "- No version defined"; read -r; exit 1; }
func_copy_linux_kernels "${VERSION}" "${AMENDMENT}"

## -------------------------------------------------------------------------- ##
## pause:
echo "Press enter to continue..."; read -r

## ########################################################################## ##
exit 0
